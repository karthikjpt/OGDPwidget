{
  "name": "OGDP",
  "version": "1.0.0",
  "description": "OGDP Earthquake Widget",
  "author": {
    "name": "Karthik",
    "email": "karthikmi@hotmail.com"
  },
  "homepage": "https://www.ogdp.in",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "in.ogdp.todayeq",
    "productName": "OGDP",
    "files": [
      "**/*",
      "!**/node_modules/{.cache,electron-builder}/*"
    ],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Karthik <karthikmi@hotmail.com>",
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "publish": {
      "provider": "github"
    }
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3"
  }
}
