{
  "name": "OGDP",
  "version": "1.0.1",
  "description": "OGDP Earthquake Widget",
  "author": {
    "name": "Karthik",
    "email": "karthikmi@hotmail.com"
  },
  "homepage": "https://www.ogdp.in",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "in.ogdp.todayeq",
    "productName": "OGDP Earthquake Widget",
    "copyright": "Copyright Â© 2025 OGDP",
    "files": [
      "**/*",
      "!**/node_modules/.cache/*",
      "!**/node_modules/electron-builder/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OGDP Earthquake"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Karthik <karthikmi@hotmail.com>",
      "category": "Utility",
      "icon": "build/icons/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icons/icon.ico",
      "publisherName": "Karthik",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icons/icon.icns"
    },
    "publish": {
      "provider": "github"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "29.4.6",
    "electron-builder": "^24.13.3",
    "sharp": "^0.33.2"
  }
}
